      });

      if (res.ok) {
        renderMode(content);
        statusDiv.textContent = "âœ… æäº¤æˆåŠŸï¼Œæ®µè½å·²æ¸²æŸ“ã€‚";
      } else {
        statusDiv.textContent = "âŒ æäº¤å¤±è´¥ï¼š" + (await res.json()).message;
