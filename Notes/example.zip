      }
    }

    // --- Initial Load ---
    window.onload = () => {
      loadSettings();
      ensureToken();
      if (GITHUB_TOKEN) {
        loadContent();
      } else {
        statusDiv.textContent = "ğŸ‘‹ æ¬¢è¿ä½¿ç”¨ï¼è¯·è¾“å…¥ GitHub Token ä»¥å¼€å§‹ã€‚";
      }
    };
  </script>
