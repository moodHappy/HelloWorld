    async function deleteContent() {
      if (!confirm("ç¡®å®šè¦æ¸…ç©º GitHub ä¸Šçš„æ–‡ä»¶å†…å®¹å—ï¼Ÿæ­¤æ“ä½œä¸å¯é€†ã€‚")) return;

      statusDiv.textContent = "ğŸ—‘ï¸ æ­£åœ¨æ¸…ç©º GitHub æ–‡ä»¶...";
      const { sha } = await getCurrentFileShaAndContent();
      if (!sha) {
        textarea.value = "";
