          shareLinkDiv.innerHTML = `ğŸ“ <b>GitHub æŸ¥çœ‹é“¾æ¥ï¼š</b><br><a href="${githubPageLink}" target="_blank">${githubPageLink}</a><br><br>ğŸ“¥ <b>ç›´é“¾ä¸‹è½½:</b><br><a href="${rawLink}" target="_blank">${rawLink}</a>`;

          // Fixed deletion time: 12 hours from now
          const deleteTimeHours = 12;
          const deleteAt = Date.now() + deleteTimeHours * 60 * 60 * 1000;

          try {
            await updatePendingDeletion(finalPathWithPrefix, deleteAt, token);
            logDiv.textContent += `\nâœ… æ–‡ä»¶ä¸Šä¼ æˆåŠŸï¼`;
            logDiv.textContent += `\nâ³ æ–‡ä»¶å°†åœ¨å¤§çº¦ ${deleteTimeHours} å°æ—¶åè¢« GitHub Actions è‡ªåŠ¨åˆ é™¤ã€‚`;
          } catch (err) {
            logDiv.textContent += `\nâŒ æ–‡ä»¶ä¸Šä¼ æˆåŠŸï¼Œä½†æ— æ³•æ›´æ–°åˆ é™¤è®¡åˆ’ï¼š${err.message}`;
          }
        };
        reader.readAsDataURL(file);

      } else if (transferContentArea.value.trim() !== "") {
        // --- Text Content Sync Logic ---
        logDiv.textContent = "ğŸ“ æ­£åœ¨æäº¤ Notes/transfer.txt æ–‡æœ¬...";
        const transferFilePath = "Notes/transfer.txt";
        try {
            await updateTransferFile(transferContentArea.value, token);
            logDiv.textContent = "âœ… æ–‡æœ¬å·²æˆåŠŸæäº¤åˆ° Notes/transfer.txt";
            const transferTxtLink = `https://raw.githubusercontent.com/${GITHUB_USERNAME}/${GITHUB_REPO}/${BRANCH_NAME}/${encodePath(transferFilePath)}`;
            shareLinkDiv.innerHTML = `ğŸ“ <b>transfer.txt ç›´é“¾:</b><br><a href="${transferTxtLink}" target="_blank">${transferTxtLink}</a>`;
            renderTransferContent(transferContentArea.value); // Render the content after successful submission
        } catch (err) {
