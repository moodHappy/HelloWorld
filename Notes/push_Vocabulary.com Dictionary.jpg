      }
    }

    async function deleteLastUploadedFile() {
      if (!lastUploadedFilePath) {
        alert("æ²¡æœ‰æœ€è¿‘ä¸Šä¼ çš„æ–‡ä»¶å¯ä»¥åˆ é™¤ã€‚è¯·ç¡®ä¿æ‚¨åˆšä¸Šä¼ è¿‡æ–‡ä»¶ä¸”æœªåˆ·æ–°é¡µé¢ã€‚");
        return;
      }

      const confirmDelete = confirm(`ç¡®å®šè¦åˆ é™¤æ–‡ä»¶ "${lastUploadedFilePath}" å—ï¼Ÿæ­¤æ“ä½œä¸å¯é€†ã€‚`);
      if (!confirmDelete) return;

      let token;
      try {
        token = getToken();
      } catch (e) {
