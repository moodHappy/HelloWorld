        document.getElementById("transferContent").value = decodeURIComponent(escape(atob(data.content.replace(/\n/g, ""))));
      } catch (err) {
        document.getElementById("log").textContent = "âš ï¸ è·å– Notes/transfer.txt å¤±è´¥ï¼š" + err.message + ". è¯·ç¡®ä¿æ–‡ä»¶å­˜åœ¨æˆ–è¾“å…¥æ­£ç¡®çš„ Tokenã€‚";
      }
    }

